---
pageable: false
---

<div class="article-lead-container" id="splash">
  <div class="article-lead">
    <% blog.articles.each do |article| %>
      <% if article.data.type == "article" %>
        <div class="article">        
          <h3 class="article-lead-title">
            <%= link_to article.title, article %>
          </h3>
          <div class="article-lead-body">
            <%= article.summary %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<% page_articles.each_with_index do |article, i| %>
  <% if article.data.type == "project" %>
    <div id="projects" class="project-list-container">      
      <div class="project-horizon">      
        <div class="project-list-details">    
           <h3 class="project-title"><%= link_to article.title, article %></h3>
           <ul class="project-tags">
             <% article.tags.each do |tag| %>
               <li>
                 <a class="project-tag" href="<%= tag_path tag %>"><%= tag %></a>
               </li>
             <% end %>
           </ul>
         </div>
       </div> 
    </div>
  <% end %>
<% end %>

